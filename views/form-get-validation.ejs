<h1>GET Form with Validation</h1>
<% if (errors && errors.length) { %>
  <ul style="color:red;">
    <% errors.forEach(function(error) { %><li><%= error %></li><% }); %>
  </ul>
<% } %>
<form method="post" action="/forms/get-validation">
  <label>Name: <input type="text" name="name" value="<%= values.name || '' %>" /></label>
  <button type="submit">Submit</button>
</form> 